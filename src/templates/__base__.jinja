{% from "__macros__.jinja" import submit %}
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description"
          content="SAFS - Sistema de Automação do Fluxo de Simulação">
    <meta name="keywords"
          content="SAFS, automação, fluxo, simulação, sistema, web, bootstrap">
    <title>
      {% block title %}
      {% endblock title %}
      - SAFS
    </title>
    <link rel="icon"
          type="image/svg+xml"
          href="{{ url_for('static', filename='chart-simple-solid.svg') }}"
          sizes="any">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT"
          crossorigin="anonymous">
    <style>
      body {
        overflow-y: scroll;
      }
      main {
        max-width: 1000px;
      }
      a {
        color: #40a3ff;
        font-weight: 500 !important;
      }
      code {
        color: #65a3ff;
        font-weight: 500 !important;
      }
      .toast-body {
        overflow: auto;
        white-space: pre-wrap;
        word-break: break-word;
      }
      .accordion-button::after {
        background-image: url("data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16' fill='%23FFFFFF'><path fill-rule='evenodd' d='M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z' /></svg>") !important;
      }
    .tooltip-wide .tooltip-inner {
        max-width: 350px;
        white-space: pre-line;
    }
    </style>
  </head>
  <body class="text-bg-dark">
    <nav class="navbar navbar-expand-sm bg-dark border-bottom border-body fixed-top"
         data-bs-theme="dark">
      <div class="container-fluid px-3">
        <span class="navbar-brand mb-0 h1 fs-3">SAFS</span>
        {% block navbarNav required %}
        {% endblock navbarNav %}
        <form id="navbar-form" class="d-flex">
          {{ submit('Limpar Sessão', 'clear-session', 'btn-outline-danger', tooltip="Limpa todos os dados da sessão (Ex: diretório base, arquivos de configuração, etc.)", tooltip_class="tooltip-wide") }}
        </form>
      </div>
    </nav>

    <main id="main" class="py-5 mx-auto mt-5">
      {% block content required %}
      {% endblock content %}
    </main>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO"
            crossorigin="anonymous"></script>
    <script src="{{ url_for('static', filename='forms.js') }}"></script>
    <script src="{{ url_for('static', filename='navbarForm.js') }}"></script>
    {% block scripts %}
    {% endblock scripts %}
  </body>
</html>
